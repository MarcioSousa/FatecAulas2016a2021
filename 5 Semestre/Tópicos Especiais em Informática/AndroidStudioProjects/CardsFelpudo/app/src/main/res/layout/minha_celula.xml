<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:src="@mipmap/felpudo"
        android:id="@+id/meuIcone"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/corFundoIcone" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meuTitulo"
        android:textSize="35sp"
        android:layout_alignTop="@+id/meuIcone"
        android:layout_toEndOf="@+id/meuIcone"
        android:layout_marginStart="14dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meuDescricao"
        android:textSize="21sp"
        android:layout_below="@+id/meuTitulo"
        android:layout_alignStart="@+id/meuTitulo"
        android:layout_alignParentEnd="true" />
</RelativeLayout>